local force=0
local verbose=0
local arg

for arg in "$@"; do
  case "$arg" in
    -f|--force)
      force=1
      shift
      ;;
    -v|--verbose)
      verbose=1
      shift
      ;;
    -vf|-fv)
      force=1
      verbose=1
      shift
      ;;
    *)
      break
      ;;
  esac
done

if (( ! $force )); then
  print -n 'Local changes will be lost, update anyway? [y/N] '
  read answer

  if [[ "$answer" != [Yy] ]]; then
    return 1
  fi
fi

if [[ ! -d "$(path:base)" ]]; then
  warn 'The base path does not exist.'
  return 1
fi

cd "$(path:base)"

if (( $verbose )); then
  git reset --hard && \
  git pull origin default && \
  git submodule update --init --recursive
else
  {
    git reset --hard && \
    git pull origin default && \
    git submodule update --init --recursive
  } &>/dev/null
fi

